= render 'shared/header'
.edit-modal
  .title Edit Like
  .edit__main
    = form_for @like do |i|
      .image-field_wrapper
        .image-btn.image-edit-btn
          = i.file_field :image, id: 'like_img'
          -if @like.image.present?
            = image_tag "#{ @like.image }", id: 'img_prev', class: 'like-edit_img'
          -else
            = image_tag asset_path("img_non_input.png"), id: 'img_prev'
      .text-field_wrapper
        = i.text_field :genre, placeholder: "Genre", autocomplete: 'off', class: "text-field"
        -if @like.errors.full_messages_for(:genre).any?
          .alert
            Please enter
      .text-field_wrapper
        = i.text_field :things, placeholder: "Things", autocomplete: 'off', class: "text-field"
        -if @like.errors.full_messages_for(:things).any?
          .alert
            Please enter
      .text-field_wrapper
        = i.text_area :description, placeholder: "Description", autocomplete: 'off', class: "text-field description"
        -if @like.errors.full_messages_for(:description).any?
          .alert
            Please enter
      .text-field_wrapper
        = i.text_field :url, placeholder: "url", autocomplete: 'off', class: "text-field"
      .btn-box
        = i.submit "Update", class: "submit-btn edit-btn"
      .link__box
        = link_to like_path, method: :delete, class: "link-btn" do
          Delete
     